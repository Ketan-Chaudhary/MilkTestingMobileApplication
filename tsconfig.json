{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "react-native",  // ✅ Fix JSX error
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,  // ✅ Fix import errors
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": ["src", "index.tsx", "App.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
